<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="800.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controlleur.PagePontesController">
    <children>
      <HBox prefHeight="70.0" prefWidth="1200.0">
         <children>
            <Button mnemonicParsing="false" prefHeight="70.0" prefWidth="400.0" text="Pontes">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
            </Button>
            <Button mnemonicParsing="false" onAction="#PageVisualisationButtonPushed" prefHeight="70.0" prefWidth="400.0" text="Visualisation">
               <font>
                  <Font size="24.0" />
               </font>
            </Button>
            <Button mnemonicParsing="false" onAction="#PageProblemeButtonPushed" prefHeight="70.0" prefWidth="400.0" text="Problèmes">
               <font>
                  <Font size="24.0" />
               </font>
            </Button>
         </children>
      </HBox>
      <TableView fx:id="tableauPontes" layoutX="60.0" layoutY="178.0" prefHeight="572.0" prefWidth="1096.0">
        <columns>
          <TableColumn fx:id="RFID_Collumn" prefWidth="182.0" text="RFID Palmipède" />
            <TableColumn fx:id="Batiment_Collumn" prefWidth="182.0" text="Bâtiment" />
            <TableColumn fx:id="Enclos_Collumn" prefWidth="182.0" text="Enclos" />
            <TableColumn fx:id="NbPontes_Collumn" prefWidth="182.0" text="Pontes" />
            <TableColumn fx:id="NbPontesParJour_Collumn" prefWidth="182.0" text="Pontes / jour" />
            <TableColumn fx:id="TempsPrecensePontes_Collumn" prefWidth="184.0" text="Tps présence dans nid / ponte" />
        </columns>
      </TableView>
      <DatePicker fx:id="DatePickerDebut" layoutX="60.0" layoutY="115.0" onAction="#changementPeriodeDatePicker" promptText="Date début" />
      <DatePicker fx:id="DatePickerFin" layoutX="279.0" layoutY="116.0" onAction="#changementPeriodeDatePicker" promptText="Date fin" />
      <Button fx:id="refreshBouton" layoutX="503.0" layoutY="115.0" mnemonicParsing="false" onAction="#refreshButtonPushed" text="Rafraîchir" />
      <Label fx:id="refreshLabel" layoutX="600.0" layoutY="120.0" prefHeight="18.0" prefWidth="174.0" text="Mis à jour à : " />
    </children>
</AnchorPane>
